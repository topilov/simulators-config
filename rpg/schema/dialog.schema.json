{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "dialogs"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "message": {
      "type": "object",
      "properties": {
        "completedQuest": {
          "$ref": "./common.schema.json#/$defs/i18n"
        }
      },
      "additionalProperties": false
    },
    "dialogs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/dialog"
      }
    }
  },
  "$defs": {
    "dialog": {
      "type": "object",
      "required": [
        "title",
        "maxTasks",
        "parts"
      ],
      "properties": {
        "title": {
          "$ref": "./common.schema.json#/$defs/i18n"
        },
        "maxTasks": {
          "type": "integer",
          "minimum": 0
        },
        "parts": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/part"
          }
        }
      },
      "additionalProperties": false
    },
    "part": {
      "type": "object",
      "required": [
        "text",
        "answers"
      ],
      "properties": {
        "taskIndex": {
          "type": "integer",
          "minimum": 0
        },
        "text": {
          "$ref": "./common.schema.json#/$defs/i18n"
        },
        "requirement": {
          "$ref": "#/$defs/requirement"
        },
        "answers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/answer"
          }
        }
      },
      "additionalProperties": false
    },
    "requirement": {
      "type": "object",
      "required": [
        "type",
        "required"
      ],
      "properties": {
        "type": {
          "type": "object",
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": ["kill_mob", "fetch_artefact"]
            },
            "mobType": {
              "type": "string"
            },
            "artefactId": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "oneOf": [
            {
              "required": ["mobType"]
            },
            {
              "required": ["artefactId"]
            }
          ]
        },
        "required": {
          "type": "number",
          "minimum": 0
        },
        "text": {
          "$ref": "./common.schema.json#/$defs/i18n"
        }
      },
      "additionalProperties": false
    },
    "answer": {
      "type": "object",
      "required": [
        "text"
      ],
      "properties": {
        "text": {
          "type": "string"
        },
        "nextPart": {
          "type": "number",
          "minimum": 0
        },
        "rewards": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isClaim": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
