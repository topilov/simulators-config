{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "drops"
  ],
  "additionalProperties": false,

  "properties": {
    "$schema": {
      "type": "string"
    },
    "drops": {
      "type": "object",
      "propertyNames": {
        "$ref": "./common.schema.json#/$defs/dropId"
      },
      "additionalProperties": {
        "$ref": "#/$defs/drop"
      }
    }
  },
  "$defs": {
    "drop": {
      "type": "object",
      "required": [
        "dropType"
      ],
      "properties": {
        "dropType": {
          "$ref": "./common.schema.json#/$defs/dropType"
        }
      },
      "additionalProperties": false
    }
  }
}